@model LibraryModel.Library_Book

@{
        ViewBag.Title = "AddBook";
        Layout = "~/Views/Template/Master.cshtml";
}

<h2>AddBook</h2>
@section Buttom{
    @using (Html.BeginForm("AddBook", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        @Html.AntiForgeryToken()
        <fieldset>
            <h3>
                語言
            </h3>
            <div class="editor-field">
                @Html.Raw(ViewData["BookType"])
            </div>

            <h3>
                類型
            </h3>
            <div class="editor-field">
                @Html.Raw(ViewData["BookLanguage"])
            </div>
            <h3>
                書名
            </h3>
            <div class="editor-field">
                @Html.EditorFor(model => model.bookName)
            </div>
            <h3>
                摘要
            </h3>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.summary, 5, 5, null)
            </div>
            @Html.ValidationSummary()
            @Html.Partial("_LibraryUploadPartial")
            <p>
                <input type="submit" value="創建" />
            </p>
        </fieldset>
        }
    <div>
        @Html.ActionLink("回到查詢頁面", "Library")
    </div>
}
<script type="text/javascript">

    function validateData()
    {

        if ($("#OrderCode").val() == "")
        {
            swal("Please enter OrderCode !");
            return false;
        } else if ($("#OrderPrice").val() == "")
        {
            swal("Please enter OrderPrice !");
            return false;
        } else
        {
            return true;
        }
    }
</script>  