@model IPagedList<Library_Book>
@{
    ViewBag.Title = "Library";
    Layout = "~/Views/Template/Master.cshtml";
}
@section Buttom{
    @Html.Partial("_LibarySearchPartal")
    @Html.ActionLink("創建一本新書", "AddBook")
    <div id="main">
        <div class="inner">
            <!-- Boxes -->
            <div class="thumbnails">
                @foreach (var item in Model)
                {
                    <div class="box">
                        <div class="inner">
                            <table>
                                <tr>
                                    <td>
                                        <h3>書名:@item.bookName</h3>
                                        <h5>類型:@item.BookType</h5>
                                        <h5>語言:@item.BookLanguage</h5>
                                        摘要:@item.summary<br />
                                        @Html.Partial("_LibaryImagePartal", item.Image)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <a href="@{Html.ActionLink("修改", "EditBook", new { id = item.id });}">修改</a>
                                        <a id="a_Delete" href="@{Html.ActionLink("修改", "Delete", new { id = item.id });}">刪除</a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
    }
            </div>
        </div>
    </div>
    @Html.Partial("_LibarayPagePartial", Model)
}
<script type="text/javascript">
    $(function () {
        swal({
            title: "確定要刪除嗎",
            text: "刪除後資料就會不見",
            type: "警告",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "確定刪除",
            closeOnConfirm: false
        },
        function () {
            swal("成功刪除", "你已經將資料刪除了", "success");
        });
        $("#a_Edit").click(function () {

        });
    });
</script>