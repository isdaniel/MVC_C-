@model LibraryModel.LoginViewModel

@{
    ViewBag.Title = "創建帳號";
    Layout = "~/Views/Template/LoginMaster.cshtml";
}
<div class="container">
    <h2 class="form-signin-heading">創建帳號</h2>
    @using (Html.BeginForm("Register", "User", FormMethod.Post, new
    {
        @class = "form-signin",
        role = "form"
    }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <label for="input_username">帳號</label>
            <div class="txt_input" id="input_username" >
                @Html.TextBoxFor(u => u.username, new
           {
               @class = "form-control",
               required = "",
               autofocus = ""
           })
                @Html.ValidationMessageFor(model => model.username)
            </div>
            <label for="input_password">密碼</label>
            <div class="txt_input" id="input_password">
                    new
                @Html.PasswordFor(u => u.password,new
                    {
                        @class = "form-control",
                        required = "",
                        autofocus = ""
                    })
                @Html.ValidationMessageFor(model => model.password)
            </div>
            <div class="control-group error">
                <div class="controls">
                    <span class="help-inline">@ViewBag.message</span>
                </div>
            </div>
            <br />
            <button class="btn btn-lg btn-primary btn-block" type="submit">創建帳戶</button>
    }
</div>