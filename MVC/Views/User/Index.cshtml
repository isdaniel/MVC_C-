@{
    ViewBag.Title = "Index";
}
@model MyWeb.Model.UserModel
<link href="~/Style/Login.css" rel="stylesheet" />
<link href="http://fonts.googleapis.com/css?family=Open%20Sans" data-generated="http://enjoycss.com" rel="stylesheet" type="text/css" />
<link href="http://fonts.googleapis.com/css?family=Syncopate" data-generated="http://enjoycss.com" rel="stylesheet" type="text/css" />
<body class="Login-background">
    <table>
        <tr>
            <td><h2>會員登入</h2></td>
        </tr>
        @using (Html.BeginForm("Index", "User", FormMethod.Post))
        {
            <tr>
                <td>

                    <div class="txt_input">
                        帳號 @Html.TextBoxFor(u => u.user_txt)
                    </div>
                    @Html.ValidationMessageFor(u => u.user_txt)
                </td>
            </tr>
            <tr>
                <td>
                    <div class="txt_input">
                        密碼 @Html.PasswordFor(u => u.password_txt)
                    </div>
                    @Html.ValidationMessageFor(u => u.password_txt)
                </td>
            </tr>
            <tr>
                <td>
                    <input value="提交" type="submit" class="button" />
                </td>
            </tr>
        }
    </table>
</body>