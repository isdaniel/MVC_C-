@model MyWeb.Model.BookModel

@{
    Layout = "~/Views/Template/Master.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddBook</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @section Buttom{
        @using (Html.BeginForm("AddBook", "Book", FormMethod.Post))
        {
            <fieldset>
                <div class="editor-label">
                    @Html.LabelFor(model => model.bookName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.bookName)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.BookType)
                </div>
                <div class="editor-field">
                    @Html.DropDownList("language")
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.BookLanguage)
                </div>
                <div class="editor-field">
                    @Html.DropDownList("booktype")
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.summary)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.summary, 10, 40, new object { })
                </div>

                <p>
                    <input type="submit" value="新增" />
                </p>
            </fieldset>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</body>
</html>